<%- include('../partials/header') %>

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <h2 class="mb-4">Edit Card</h2>

            <% if (success) { %>
            <div class="alert alert-success alert-dismissible fade show">
                <%= success === 'images_added' ? 'Images added successfully!' :
                    success === 'image_deleted' ? 'Image deleted successfully!' :
                    'Card updated successfully!' %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
            <% } %>

            <% if (error) { %>
            <div class="alert alert-danger alert-dismissible fade show">
                <%= error === 'no_images' ? 'Please select at least one image' :
                    error === 'add_failed' ? 'Failed to add images' :
                    error === 'delete_failed' ? 'Failed to delete image' :
                    'An error occurred' %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
            <% } %>

            <div class="card">
                <div class="card-body">
                    <form action="/admin/cards/<%= card.id %>/edit" method="POST" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="card_name" class="form-label">Card Name *</label>
                            <input type="text" class="form-control" id="card_name" name="card_name"
                                   value="<%= card.card_name %>" required>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="set_name" class="form-label">Set Name</label>
                                <input type="text" class="form-control" id="set_name" name="set_name"
                                       value="<%= card.set_name || '' %>">
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="card_number" class="form-label">Card Number</label>
                                <input type="text" class="form-control" id="card_number" name="card_number"
                                       value="<%= card.card_number || '' %>">
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="year" class="form-label">Year</label>
                                <input type="number" class="form-control" id="year" name="year"
                                       value="<%= card.year || '' %>">
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="sport_type" class="form-label">Sport/Type</label>
                                <select class="form-select" id="sport_type" name="sport_type">
                                    <option value="">Select...</option>
                                    <option value="basketball" <%= card.sport_type === 'basketball' ? 'selected' : '' %>>Basketball</option>
                                    <option value="pokemon" <%= card.sport_type === 'pokemon' ? 'selected' : '' %>>Pokemon</option>
                                    <option value="magic" <%= card.sport_type === 'magic' ? 'selected' : '' %>>Magic: The Gathering</option>
                                    <option value="baseball" <%= card.sport_type === 'baseball' ? 'selected' : '' %>>Baseball</option>
                                    <option value="football" <%= card.sport_type === 'football' ? 'selected' : '' %>>Football</option>
                                    <option value="other" <%= card.sport_type === 'other' ? 'selected' : '' %>>Other</option>
                                </select>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="condition" class="form-label">Condition</label>
                                <select class="form-select" id="condition" name="condition">
                                    <option value="">Select...</option>
                                    <option value="mint" <%= card.condition === 'mint' ? 'selected' : '' %>>Mint</option>
                                    <option value="near_mint" <%= card.condition === 'near_mint' ? 'selected' : '' %>>Near Mint</option>
                                    <option value="excellent" <%= card.condition === 'excellent' ? 'selected' : '' %>>Excellent</option>
                                    <option value="good" <%= card.condition === 'good' ? 'selected' : '' %>>Good</option>
                                    <option value="played" <%= card.condition === 'played' ? 'selected' : '' %>>Played</option>
                                </select>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="price_nzd" class="form-label">Price (NZD) *</label>
                                <input type="number" class="form-control" id="price_nzd" name="price_nzd"
                                       step="0.01" min="0" value="<%= card.price_nzd %>" required>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="quantity" class="form-label">Quantity *</label>
                            <input type="number" class="form-control" id="quantity" name="quantity"
                                   min="0" value="<%= card.quantity %>" required>
                        </div>

                        <div class="mb-3">
                            <label for="description" class="form-label">Description</label>
                            <textarea class="form-control" id="description" name="description" rows="3"><%= card.description || '' %></textarea>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="image_front" class="form-label">Front Image</label>
                                <% if (card.image_front) { %>
                                <img src="<%= card.image_front %>" class="img-thumbnail mb-2" style="max-height: 150px;">
                                <% } %>
                                <input type="file" class="form-control" id="image_front" name="image_front" accept="image/*">
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="image_back" class="form-label">Back Image</label>
                                <% if (card.image_back) { %>
                                <img src="<%= card.image_back %>" class="img-thumbnail mb-2" style="max-height: 150px;">
                                <% } %>
                                <input type="file" class="form-control" id="image_back" name="image_back" accept="image/*">
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                            <a href="/admin/cards" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Additional Images Section -->
            <div class="card mt-4">
                <div class="card-header">
                    <h5 class="mb-0">Condition Comparison Images</h5>
                    <small class="text-muted">Add multiple images to show card condition from different angles</small>
                </div>
                <div class="card-body">
                    <!-- Existing Additional Images -->
                    <% if (additionalImages && additionalImages.length > 0) { %>
                    <div class="row mb-4">
                        <% additionalImages.forEach(img => { %>
                        <div class="col-md-3 mb-3">
                            <div class="card">
                                <img src="<%= img.image_url %>" class="card-img-top" alt="Card image">
                                <div class="card-body p-2">
                                    <p class="card-text small mb-2">
                                        <span class="badge bg-secondary"><%= img.image_type %></span>
                                    </p>
                                    <form action="/admin/cards/<%= card.id %>/images/<%= img.id %>/delete" method="POST" class="d-inline">
                                        <button type="submit" class="btn btn-danger btn-sm w-100"
                                                onclick="return confirm('Delete this image?')">
                                            Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <% }); %>
                    </div>
                    <% } else { %>
                    <p class="text-muted">No additional images yet. Add some below!</p>
                    <% } %>

                    <!-- Add New Images Form -->
                    <form action="/admin/cards/<%= card.id %>/images/add" method="POST" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="images" class="form-label">Upload Images</label>
                            <input type="file" class="form-control" id="images" name="images"
                                   accept="image/*" multiple>
                            <small class="form-text text-muted">
                                Select up to 10 images. Useful for showing corners, edges, surface details, etc.
                            </small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Image Type (for all selected images)</label>
                            <select class="form-select" name="image_type_0" id="defaultImageType">
                                <option value="detail">Detail Shot</option>
                                <option value="front">Front</option>
                                <option value="back">Back</option>
                                <option value="edge">Edge View</option>
                                <option value="corner">Corner Detail</option>
                            </select>
                        </div>

                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-plus-circle"></i> Add Images
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// Preview selected images
document.getElementById('images')?.addEventListener('change', function(e) {
    const files = e.target.files;
    if (files.length > 0) {
        console.log(`${files.length} image(s) selected`);
    }
});
</script>

<%- include('../partials/footer') %>
