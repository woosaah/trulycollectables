<%- include('../partials/header') %>

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="/admin/inquiries">Inquiries</a></li>
                    <li class="breadcrumb-item active">Inquiry Detail</li>
                </ol>
            </nav>

            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <h5 class="card-title mb-0">Inquiry Detail</h5>
                        <span class="badge badge-<%= inquiry.status %>"><%= inquiry.status %></span>
                    </div>

                    <div class="mb-3">
                        <strong>From:</strong> <%= inquiry.username || 'Guest' %> (<%= inquiry.email %>)<br>
                        <strong>Date:</strong> <%= new Date(inquiry.created_at).toLocaleString() %><br>
                        <strong>Card:</strong> <%= inquiry.card_name %> <%= inquiry.set_name ? '- ' + inquiry.set_name : '' %>
                    </div>

                    <% if (inquiry.image_front) { %>
                    <div class="mb-3">
                        <img src="<%= inquiry.image_front %>" class="img-thumbnail" style="max-height: 200px;">
                    </div>
                    <% } %>

                    <div class="alert alert-light">
                        <strong>Message:</strong><br>
                        <%= inquiry.message %>
                    </div>

                    <div class="d-flex gap-2">
                        <form action="/admin/inquiries/<%= inquiry.id %>/status" method="POST">
                            <input type="hidden" name="status" value="replied">
                            <button type="submit" class="btn btn-primary">Mark as Replied</button>
                        </form>
                        <form action="/admin/inquiries/<%= inquiry.id %>/status" method="POST">
                            <input type="hidden" name="status" value="closed">
                            <button type="submit" class="btn btn-secondary">Close</button>
                        </form>
                        <a href="/admin/inquiries" class="btn btn-outline-secondary">Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
