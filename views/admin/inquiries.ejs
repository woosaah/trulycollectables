<%- include('../partials/header') %>

<div class="container my-4">
    <h2 class="mb-4">Manage Inquiries</h2>

    <!-- Status Filter -->
    <ul class="nav nav-tabs mb-4">
        <li class="nav-item">
            <a class="nav-link <%= !currentStatus ? 'active' : '' %>" href="/admin/inquiries">All</a>
        </li>
        <li class="nav-item">
            <a class="nav-link <%= currentStatus === 'new' ? 'active' : '' %>" href="/admin/inquiries?status=new">New</a>
        </li>
        <li class="nav-item">
            <a class="nav-link <%= currentStatus === 'replied' ? 'active' : '' %>" href="/admin/inquiries?status=replied">Replied</a>
        </li>
        <li class="nav-item">
            <a class="nav-link <%= currentStatus === 'closed' ? 'active' : '' %>" href="/admin/inquiries?status=closed">Closed</a>
        </li>
    </ul>

    <% if (inquiries && inquiries.length > 0) { %>
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>User</th>
                    <th>Email</th>
                    <th>Card</th>
                    <th>Message</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% inquiries.forEach(inquiry => { %>
                <tr>
                    <td><%= new Date(inquiry.created_at).toLocaleDateString() %></td>
                    <td><%= inquiry.username || 'Guest' %></td>
                    <td><%= inquiry.email %></td>
                    <td>
                        <%= inquiry.card_name || '-' %>
                        <% if (inquiry.set_name) { %>
                        <br><small class="text-muted"><%= inquiry.set_name %></small>
                        <% } %>
                    </td>
                    <td class="small"><%= inquiry.message.substring(0, 50) %><%= inquiry.message.length > 50 ? '...' : '' %></td>
                    <td>
                        <span class="badge badge-<%= inquiry.status %>"><%= inquiry.status %></span>
                    </td>
                    <td>
                        <div class="btn-group btn-group-sm">
                            <form action="/admin/inquiries/<%= inquiry.id %>/status" method="POST" class="d-inline">
                                <input type="hidden" name="status" value="replied">
                                <button type="submit" class="btn btn-outline-primary"
                                        <%= inquiry.status === 'replied' ? 'disabled' : '' %>>Replied</button>
                            </form>
                            <form action="/admin/inquiries/<%= inquiry.id %>/status" method="POST" class="d-inline">
                                <input type="hidden" name="status" value="closed">
                                <button type="submit" class="btn btn-outline-secondary"
                                        <%= inquiry.status === 'closed' ? 'disabled' : '' %>>Close</button>
                            </form>
                        </div>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
    <% } else { %>
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> No inquiries found.
    </div>
    <% } %>
</div>

<%- include('../partials/footer') %>
