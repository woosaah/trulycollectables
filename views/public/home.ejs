<%- include('../partials/header') %>

<!-- Hero Section -->
<div class="hero text-center">
    <div class="container">
        <h1 class="mb-3">Welcome to TrulyCollectables</h1>
        <p class="lead mb-4">Your trusted source for trading cards and collectibles</p>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form action="/cards" method="GET" class="input-group mb-3">
                    <input type="text" class="form-control" name="search" placeholder="Search for cards...">
                    <button class="btn btn-light" type="submit">
                        <i class="bi bi-search"></i> Search
                    </button>
                </form>
            </div>
        </div>
        <div class="mt-4">
            <a href="/cards" class="btn btn-light btn-lg me-2">Browse Cards</a>
            <a href="/figurines" class="btn btn-outline-light btn-lg">Browse Figurines</a>
        </div>
    </div>
</div>

<div class="container">
    <!-- Browse by Sport/Type -->
    <% if (sportTypes && sportTypes.length > 0) { %>
    <section class="mb-5">
        <h2 class="mb-4 border-bottom-custom pb-2">Browse by Type</h2>
        <div class="row g-3">
            <% sportTypes.forEach(sport => { %>
            <div class="col-6 col-md-3">
                <a href="/cards?sport_type=<%= sport %>" class="text-decoration-none">
                    <div class="card text-center hover-shadow">
                        <div class="card-body">
                            <h5 class="card-title text-capitalize mb-0"><%= sport %></h5>
                        </div>
                    </div>
                </a>
            </div>
            <% }); %>
        </div>
    </section>
    <% } %>

    <!-- Featured Cards -->
    <section class="mb-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="border-bottom-custom pb-2 mb-0">Featured Cards</h2>
            <a href="/cards" class="text-decoration-none">View All <i class="bi bi-arrow-right"></i></a>
        </div>

        <% if (featuredCards && featuredCards.length > 0) { %>
        <div class="product-grid">
            <% featuredCards.forEach(card => { %>
            <div class="card">
                <a href="/cards/<%= card.id %>" class="text-decoration-none">
                    <% if (card.image_front) { %>
                    <img src="<%= card.image_front %>" class="card-img-top" alt="<%= card.card_name %>">
                    <% } else { %>
                    <div class="card-img-top d-flex align-items-center justify-content-center bg-light">
                        <i class="bi bi-image text-muted" style="font-size: 3rem;"></i>
                    </div>
                    <% } %>
                    <div class="card-body">
                        <h5 class="card-title text-dark"><%= card.card_name %></h5>
                        <p class="card-text text-muted small mb-2">
                            <%= card.set_name || 'N/A' %>
                            <% if (card.year) { %>(<%= card.year %>)<% } %>
                        </p>
                        <% if (card.condition) { %>
                        <span class="badge badge-<%= card.condition.toLowerCase().replace(/[^a-z]/g, '') %> mb-2">
                            <%= card.condition %>
                        </span>
                        <% } %>
                        <div class="price-tag">NZD $<%= card.price_nzd.toFixed(2) %></div>
                        <% if (card.quantity > 0) { %>
                        <p class="text-muted small mb-0"><%= card.quantity %> in stock</p>
                        <% } else { %>
                        <p class="text-danger small mb-0">Out of stock</p>
                        <% } %>
                    </div>
                </a>
            </div>
            <% }); %>
        </div>
        <% } else { %>
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No featured cards available at the moment.
        </div>
        <% } %>
    </section>

    <!-- Features Section -->
    <section class="mb-5">
        <h2 class="mb-4 border-bottom-custom pb-2">Why Choose Us?</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="text-center">
                    <i class="bi bi-shield-check text-primary" style="font-size: 3rem;"></i>
                    <h5 class="mt-3">Authentic Cards</h5>
                    <p class="text-muted">All cards verified for authenticity</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="text-center">
                    <i class="bi bi-truck text-primary" style="font-size: 3rem;"></i>
                    <h5 class="mt-3">Fast Shipping</h5>
                    <p class="text-muted">Quick and secure delivery across NZ</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="text-center">
                    <i class="bi bi-collection text-primary" style="font-size: 3rem;"></i>
                    <h5 class="mt-3">Track Collections</h5>
                    <p class="text-muted">Manage your personal collection online</p>
                </div>
            </div>
        </div>
    </section>
</div>

<%- include('../partials/footer') %>
