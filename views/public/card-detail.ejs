<%- include('../partials/header') %>

<div class="container my-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/cards">Cards</a></li>
            <li class="breadcrumb-item active"><%= card.card_name %></li>
        </ol>
    </nav>

    <% if (typeof req !== 'undefined' && req.query.inquiry === 'success') { %>
    <div class="alert alert-success alert-dismissible fade show">
        <i class="bi bi-check-circle"></i> Your inquiry has been submitted successfully!
    </div>
    <% } %>

    <div class="row">
        <!-- Image Section -->
        <div class="col-md-6 mb-4">
            <%
            // Build all images array
            const allImages = [];
            if (card.image_front) allImages.push({url: card.image_front, label: 'Front'});
            if (card.image_back) allImages.push({url: card.image_back, label: 'Back'});
            if (additionalImages && additionalImages.length > 0) {
                additionalImages.forEach(img => {
                    allImages.push({url: img.image_url, label: img.image_type});
                });
            }
            %>

            <% if (allImages.length > 0) { %>
            <!-- Main Image -->
            <div class="mb-3 position-relative">
                <img src="<%= allImages[0].url %>"
                     class="img-fluid product-image-main w-100 cursor-pointer"
                     alt="<%= card.card_name %>"
                     onclick="openLightbox(0)"
                     style="cursor: pointer; border: 2px solid #ddd; border-radius: 8px;">
                <div class="position-absolute top-0 end-0 m-2">
                    <span class="badge bg-dark">
                        <i class="bi bi-zoom-in"></i> Click to enlarge
                    </span>
                </div>
            </div>

            <!-- Thumbnail Gallery -->
            <% if (allImages.length > 1) { %>
            <div class="row g-2">
                <% allImages.forEach((img, index) => { %>
                <div class="col-3">
                    <div class="position-relative">
                        <img src="<%= img.url %>"
                             class="img-thumbnail w-100 cursor-pointer"
                             alt="<%= img.label %>"
                             onclick="openLightbox(<%= index %>)"
                             style="cursor: pointer; height: 80px; object-fit: cover;">
                        <small class="text-center d-block text-muted" style="font-size: 0.7rem;">
                            <%= img.label %>
                        </small>
                    </div>
                </div>
                <% }); %>
            </div>
            <p class="text-muted small mt-2 text-center">
                <i class="bi bi-images"></i> <%= allImages.length %> high-quality images - Click to view full size
            </p>
            <% } %>
            <% } else { %>
            <div class="product-image-main w-100 d-flex align-items-center justify-content-center" style="height: 500px;">
                <i class="bi bi-image text-muted" style="font-size: 5rem;"></i>
            </div>
            <% } %>
        </div>

        <!-- Details Section -->
        <div class="col-md-6">
            <h1 class="mb-3"><%= card.card_name %></h1>

            <div class="mb-3">
                <% if (card.condition) { %>
                <span class="badge badge-<%= card.condition.toLowerCase().replace(/[^a-z]/g, '') %> me-2">
                    <%= card.condition %>
                </span>
                <% } %>
                <% if (card.sport_type) { %>
                <span class="badge bg-secondary"><%= card.sport_type %></span>
                <% } %>
            </div>

            <div class="price-tag mb-4">NZD $<%= card.price_nzd.toFixed(2) %></div>

            <table class="table table-sm mb-4">
                <tbody>
                    <% if (card.set_name) { %>
                    <tr>
                        <th style="width: 150px;">Set:</th>
                        <td><%= card.set_name %></td>
                    </tr>
                    <% } %>
                    <% if (card.card_number) { %>
                    <tr>
                        <th>Card Number:</th>
                        <td><%= card.card_number %></td>
                    </tr>
                    <% } %>
                    <% if (card.year) { %>
                    <tr>
                        <th>Year:</th>
                        <td><%= card.year %></td>
                    </tr>
                    <% } %>
                    <tr>
                        <th>Availability:</th>
                        <td>
                            <% if (card.quantity > 0) { %>
                            <span class="text-success"><i class="bi bi-check-circle"></i> <%= card.quantity %> in stock</span>
                            <% } else { %>
                            <span class="text-danger"><i class="bi bi-x-circle"></i> Out of stock</span>
                            <% } %>
                        </td>
                    </tr>
                </tbody>
            </table>

            <% if (card.description) { %>
            <div class="mb-4">
                <h5>Description</h5>
                <p class="text-muted"><%= card.description %></p>
            </div>
            <% } %>

            <!-- Action Buttons -->
            <% if (card.quantity > 0) { %>
            <form action="/user/cart/add" method="POST" class="mb-3">
                <input type="hidden" name="card_id" value="<%= card.id %>">
                <div class="row g-2">
                    <div class="col-4">
                        <input type="number" class="form-control" name="quantity" value="1" min="1" max="<%= card.quantity %>">
                    </div>
                    <div class="col-8">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-cart-plus"></i> Add to Cart
                        </button>
                    </div>
                </div>
            </form>
            <% } else { %>
            <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle"></i> This card is currently out of stock.
            </div>
            <% } %>

            <!-- Contact About This Card -->
            <button type="button" class="btn btn-outline-primary w-100" data-bs-toggle="modal" data-bs-target="#inquiryModal">
                <i class="bi bi-envelope"></i> Contact About This Card
            </button>
        </div>
    </div>
</div>

<!-- Inquiry Modal -->
<div class="modal fade" id="inquiryModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="/inquiries" method="POST">
                <div class="modal-header">
                    <h5 class="modal-title">Contact About This Card</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="card_id" value="<%= card.id %>">
                    <div class="mb-3">
                        <label class="form-label">Your Message</label>
                        <textarea class="form-control" name="message" rows="4" required placeholder="Ask about availability, condition, pricing, or anything else..."></textarea>
                    </div>
                    <% if (!user) { %>
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> You need to <a href="/auth/login">login</a> to submit an inquiry.
                    </div>
                    <% } %>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <% if (user) { %>
                    <button type="submit" class="btn btn-primary">Submit Inquiry</button>
                    <% } else { %>
                    <a href="/auth/login" class="btn btn-primary">Login to Submit</a>
                    <% } %>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Lightbox Modal -->
<div class="modal fade" id="lightboxModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content bg-dark">
            <div class="modal-header border-0">
                <h5 class="modal-title text-white" id="lightboxLabel">Image Gallery</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-0 position-relative">
                <img id="lightboxImage" src="" class="img-fluid w-100" alt="Card image">

                <% if (allImages && allImages.length > 1) { %>
                <!-- Previous Button -->
                <button class="btn btn-light position-absolute top-50 start-0 translate-middle-y ms-3"
                        onclick="changeLightboxImage(-1)" style="opacity: 0.8;">
                    <i class="bi bi-chevron-left"></i>
                </button>

                <!-- Next Button -->
                <button class="btn btn-light position-absolute top-50 end-0 translate-middle-y me-3"
                        onclick="changeLightboxImage(1)" style="opacity: 0.8;">
                    <i class="bi bi-chevron-right"></i>
                </button>

                <!-- Image Counter -->
                <div class="position-absolute bottom-0 start-50 translate-middle-x mb-3">
                    <span class="badge bg-dark" id="imageCounter">1 / <%= allImages.length %></span>
                </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<script>
// Lightbox functionality
const images = <%- JSON.stringify(allImages || []) %>;
let currentImageIndex = 0;

function openLightbox(index) {
    currentImageIndex = index;
    updateLightboxImage();
    const modal = new bootstrap.Modal(document.getElementById('lightboxModal'));
    modal.show();
}

function changeLightboxImage(direction) {
    currentImageIndex += direction;

    // Loop around
    if (currentImageIndex < 0) {
        currentImageIndex = images.length - 1;
    } else if (currentImageIndex >= images.length) {
        currentImageIndex = 0;
    }

    updateLightboxImage();
}

function updateLightboxImage() {
    if (images.length > 0) {
        document.getElementById('lightboxImage').src = images[currentImageIndex].url;
        document.getElementById('lightboxLabel').textContent = images[currentImageIndex].label + ' View';

        const counter = document.getElementById('imageCounter');
        if (counter) {
            counter.textContent = `${currentImageIndex + 1} / ${images.length}`;
        }
    }
}

// Keyboard navigation
document.addEventListener('keydown', function(e) {
    const modal = document.getElementById('lightboxModal');
    if (modal.classList.contains('show')) {
        if (e.key === 'ArrowLeft') {
            changeLightboxImage(-1);
        } else if (e.key === 'ArrowRight') {
            changeLightboxImage(1);
        } else if (e.key === 'Escape') {
            bootstrap.Modal.getInstance(modal).hide();
        }
    }
});
</script>

<%- include('../partials/footer') %>
