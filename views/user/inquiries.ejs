<%- include('../partials/header') %>

<div class="container my-4">
    <h2 class="mb-4">My Inquiries</h2>

    <% if (inquiries && inquiries.length > 0) { %>
    <div class="row">
        <% inquiries.forEach(inquiry => { %>
        <div class="col-md-6 mb-3">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <h6 class="card-title mb-0"><%= inquiry.card_name %></h6>
                        <span class="badge badge-<%= inquiry.status %>"><%= inquiry.status %></span>
                    </div>
                    <% if (inquiry.set_name) { %>
                    <p class="text-muted small mb-2"><%= inquiry.set_name %></p>
                    <% } %>
                    <p class="card-text">"<%= inquiry.message %>"</p>
                    <p class="text-muted small mb-0">
                        <i class="bi bi-clock"></i> <%= new Date(inquiry.created_at).toLocaleDateString() %>
                    </p>
                </div>
            </div>
        </div>
        <% }); %>
    </div>
    <% } else { %>
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> You haven't submitted any inquiries yet.
    </div>
    <% } %>
</div>

<%- include('../partials/footer') %>
