{
  "name": "trulycollectables",
  "version": "1.0.0",
  "description": "Trading card ecommerce platform with integrated collection management",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --verbose --coverage",
    "test:watch": "jest --watch",
    "test:models": "jest tests/models --verbose",
    "test:routes": "jest tests/routes --verbose",
    "test:integration": "jest tests/integration --verbose"
  },
  "keywords": ["ecommerce", "trading-cards", "collection-management"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "bcrypt": "^5.1.1",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "dotenv": "^16.3.1",
    "multer": "^1.4.5-lts.1",
    "ejs": "^3.1.9",
    "connect-pg-simple": "^9.0.1",
    "csv-parse": "^5.5.2",
    "cookie-parser": "^1.4.6"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@jest/globals": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "models/**/*.js",
      "routes/**/*.js",
      "!node_modules/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "verbose": true
  }
}
